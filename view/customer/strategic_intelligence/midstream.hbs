    function LoadChanges(date){
        if(spinner == null) {
            spinner = new Spinner(opts).spin(spinner_div);
        } else {
            spinner.spin(spinner_div);
        }
        try {
            $('#spinner').show();
            function query(region, date){
                var strDate = "";
